# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET     /blog/:id                   controllers.HomePageController.getBlog(id :Integer)
GET     /bloglist                   controllers.HomePageController.getBlogs()

GET     /blogadd                    controllers.HomePageController.getBlogAdd()
POST    /blogadd                    controllers.HomePageController.postBlogAdd()

GET     /test                       controllers.TestController.getTest
POST    /test                       controllers.TestController.postTest

GET     /testdb                     controllers.TestController.getTestDb
POST    /testdb                     controllers.TestController.postTestDb

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
